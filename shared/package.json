{
    "name": "@hackjunction/shared",
    "version": "1.1.45",
    "description": "",
    "main": "index.js",
    "scripts": {
        "test": "mocha",
        "precommit": "echo \"Shared: running pre-commit checks\" && npm run test"
    },
    "author": "Juuso Lappalainen",
    "license": "ISC",
    "eslintConfig": {
        "env": {
            "es2020": true
        },
        "extends": [
            "airbnb-base",
            "prettier"
        ],
        "plugins": [
            "prettier"
        ],
        "parserOptions": {
            "ecmaVersion": 2018
        },
        "rules": {
            "no-param-reassign": 0,
            "no-underscore-dangle": 0,
            "prefer-destructuring": [
                "error",
                {
                    "VariableDeclarator": {
                        "array": false,
                        "object": true
                    },
                    "AssignmentExpression": {
                        "array": false,
                        "object": true
                    }
                }
            ],
            "prettier/prettier": [
                "error",
                {
                    "printWidth": 80,
                    "trailingComma": "es5",
                    "semi": false,
                    "jsxSingleQuote": false,
                    "singleQuote": true,
                    "useTabs": false,
                    "tabWidth": 4,
                    "bracketSpacing": true,
                    "arrowParens": "avoid"
                }
            ]
        }
    },
    "dependencies": {
        "graphql": "^15.5.0",
        "graphql-iso-date": "^3.6.1",
        "lodash": "^4.17.21",
        "mongoose": "^5.12.13",
        "object-path": "^0.11.5",
        "yup": "^0.32.9"
    },
    "devDependencies": {
        "eslint": "^7.28.0",
        "eslint-config-airbnb-base": "^14.2.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.23.4",
        "eslint-plugin-prettier": "^3.4.0",
        "prettier": "^2.3.1",
        "mocha": "^9.0.0"
    },
    "engines": {
        "node": "^16.3.0",
        "npm": "^7.15.0"
    }
}
