{
    "name": "junctionapp-backend",
    "version": "1.0.0",
    "description": "",
    "main": "index.js",
    "scripts": {
        "dev": "nodemon index.js",
        "start": "node index.js | npm run pipe-logs",
        "pipe-logs": "pino-cloudwatch --aws_access_key_id=$AWS_ACCESS_KEY_ID --aws_secret_access_key=$AWS_SECRET_ACCESS_KEY --aws_region=$AWS_REGION --group=$AWS_CLOUDWATCH_LOG_GROUP",
        "test": "echo \"Error: no test specified\" && exit 1",
        "lint": "eslint ./common && eslint ./modules && eslint ./utils",
        "lint-fix": "eslint ./common --fix && eslint ./modules --fix && eslint ./utils --fix",
        "depcheck": "depcheck .",
        "eslint-check": "eslint --print-config path/to/main.js | eslint-config-prettier-check",
        "precommit": "echo \"Backend: running pre-commit checks\""
    },
    "author": "",
    "license": "ISC",
    "dependencies": {
        "@hackjunction/shared": "file:../shared",
        "@sendgrid/client": "^7.4.3",
        "@sendgrid/mail": "^7.4.4",
        "@stdlib/stdlib": "0.0.90",
        "apollo-server-express": "^2.25.1",
        "auth0": "^2.35.0",
        "axios": "^0.21.1",
        "bcrypt": "^5.0.1",
        "better-npm-run": "^0.1.1",
        "bluebird": "^3.7.2",
        "body-parser": "^1.19.0",
        "celebrate": "^14.0.0",
        "cloudinary": "^1.26.0",
        "cron": "^1.8.2",
        "dataloader": "^2.0.0",
        "discord.js": "^12.5.3",
        "dotenv": "^10.0.0",
        "express": "^4.17.1",
        "express-async-handler": "^1.1.4",
        "express-jwt": "^6.0.0",
        "graphql": "^15.5.0",
        "graphql-iso-date": "^3.6.1",
        "graphql-tools": "^7.0.5",
        "graphql-type-json": "^0.3.2",
        "helmet": "^4.6.0",
        "heroku-ssl-redirect": "0.1.1",
        "http-status": "^1.5.0",
        "jwks-rsa": "^2.0.3",
        "lodash": "^4.17.21",
        "moment-timezone": "^0.5.33",
        "mongoose": "^5.12.13",
        "mongoose-slug-plugin": "^2.1.0",
        "multer": "^1.4.2",
        "multer-storage-cloudinary": "^4.0.0",
        "pino": "^6.11.3",
        "pino-pretty": "^5.0.2",
        "pino-sentry": "^0.7.0",
        "prerender-node": "^3.2.5",
        "shortid": "^2.2.16",
        "stdlib": "^0.6.0",
        "yup": "^0.32.9"
    },
    "eslintConfig": {
        "env": {
            "es2020": true
        },
        "extends": [
            "airbnb-base",
            "prettier"
        ],
        "plugins": [
            "prettier"
        ],
        "parserOptions": {
            "ecmaVersion": 2020
        },
        "rules": {
            "no-param-reassign": 0,
            "no-underscore-dangle": 0,
            "prefer-destructuring": [
                "error",
                {
                    "VariableDeclarator": {
                        "array": false,
                        "object": true
                    },
                    "AssignmentExpression": {
                        "array": false,
                        "object": true
                    }
                }
            ],
            "prettier/prettier": [
                "error",
                {
                    "printWidth": 80,
                    "trailingComma": "es5",
                    "semi": false,
                    "jsxSingleQuote": false,
                    "singleQuote": true,
                    "useTabs": false,
                    "tabWidth": 4,
                    "bracketSpacing": true,
                    "arrowParens": "avoid"
                }
            ]
        }
    },
    "devDependencies": {
        "depcheck": "^1.4.1",
        "eslint": "^7.28.0",
        "eslint-config-airbnb-base": "^14.2.1",
        "eslint-config-prettier": "^8.3.0",
        "eslint-plugin-import": "^2.23.4",
        "eslint-plugin-prettier": "^3.4.0",
        "kill-port": "^1.6.1",
        "nodemon": "^2.0.7",
        "prettier": "^2.3.1"
    },
    "engines": {
        "node": "^16.3.0",
        "npm": "^7.15.0"
    }
}
